@model Product

@section Categories
{
    @await Component.InvokeAsync("Categories")
}

<div class="card mb-3 border-0 shadow-sm">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/img/@Model.ImageUrl" class="card-img" alt="@Model.Name">
            </div>
            <div class="col-md-9">
                <div class="card-text">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-description">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>

@* CSS Kodu *@

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-img {
        border-top-left-radius: 15px;
        border-bottom-left-radius: 15px;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #333; /* Temanıza uygun renk */
    }

    .card-description {
        font-size: 1rem;
        color: #666; /* Temanıza uygun renk */
    }
</style>
